<%= form_for @sale, :html => { :class => "form-horizontal sale" } do |f| %>

  <% if @sale.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@sale.errors.count, "error") %> prohibited this sale from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @sale.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="container">
    <div class="navbar-body">
      <div class="jumbotron">

        <div class="form-group">
          <%= f.label :client_id, :class => 'col-sm-2 control-label' %>
          <div class="col-sm-6">
            <%= f.text_field :client_id, :class => 'form-control' %>
          </div>
          <%= error_span(@sale[:client_id]) %>
        </div>
        <div class="form-group">
          <%= f.label :product_id, class: 'col-sm-2 control-label' %>
          <div class="col-sm-6">

            <%= collection_select( :sale, :product_id, Product.all, :id, :name_price, { :multiple => false }, {class: "form-control"})%>

          </div>
          <%= error_span(@sale[:client_id]) %>
        </div>

        <!-- TODO: pesquisar outra maneira de passar o user_id do usuario logado -->

        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-6">
            <%= f.submit nil, :class => 'btn btn-primary' %>
          </div>
        </div>

      </div>
    </div>
  </div>
<% end %>
