<%- model_class = User -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th>Name</th>
      <th>Email</th>
      <th>Credits (R$)</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr class='clickable-row' data-href="/profiles/<%= user.profile.id %>" >
      
        <td><%= user.id %></td>
        <td><%= user.profile.name %></td>
        <td><%= user.email %></td>
        <td><%= user.profile.credits %></td>
        <td>
          <%= link_to 'Bank Statement',
                      "/users/", :class => 'btn btn-default btn-xs' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
  <%= link_to('New', '/users/sign_up', :class => 'btn btn-primary') %>
