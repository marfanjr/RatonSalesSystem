<%= form_for @inventory_item, :html => { :class => "form-horizontal inventory_item" } do |f| %>

    <% if @inventory_item.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@inventory_item.errors.count, "error") %> prohibited this inventory_item from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @inventory_item.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="container">
    <div class="navbar-body">
      <div class="jumbotron">

        <div class="form-group">
          <%= f.label :party_id, class: 'col-sm-2 control-label' %>
          <div class="col-sm-6">

            <%= collection_select( :inventory_item, :party_id, Party.all, :id, :name, { :multiple => false }, {class: "form-control"})%>

          </div>
          <%= error_span(@inventory_item[:party_id]) %>
        </div>

        <div class="form-group">
          <%= f.label :product_id, class: 'col-sm-2 control-label' %>
          <div class="col-sm-6">

            <%= collection_select( :inventory_item, :product_id, Product.all, :id, :name, { :multiple => false }, {class: "form-control"})%>

          </div>
          <%= error_span(@inventory_item[:product_id]) %>
        </div>

        <div class="form-group">
          <%= f.label :amount_purchased, :class => 'col-sm-2 control-label' %>
          <div class="col-sm-6">
            <%= f.number_field :amount_purchased, :class => 'form-control' %>
          </div>
          <%= error_span(@inventory_item[:amount_purchased]) %>
        </div>

        <div class="form-group">
          <%= f.label :unit_cost, :class => 'col-sm-2 control-label' %>
          <div class="col-sm-6">
            <%= f.text_field :unit_cost, :class => 'form-control' %>
          </div>
          <%= error_span(@inventory_item[:unit_cost]) %>
        </div>

        <div class="form-group">
          <%= f.label "Profit Margin (%)", :class => 'col-sm-2 control-label' %>
          <div class="col-sm-6">
            <%= f.number_field :profit_margin, :class => 'form-control' %>
          </div>
          <%= error_span(@inventory_item[:profit_margin]) %>
        </div>

        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-6">
            <%= f.submit nil, :class => 'btn btn-primary' %>
          </div>
        </div>

      </div>
    </div>
  </div>

<% end %>
