<%- model_class = InventoryItem -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:product_id) %>:</strong></dt>
  <dd><%= @inventory_item.product_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:party_id) %>:</strong></dt>
  <dd><%= @inventory_item.party_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:amount_purchased) %>:</strong></dt>
  <dd><%= @inventory_item.amount_purchased %></dd>
  <dt><strong><%= model_class.human_attribute_name(:unit_cost) %>:</strong></dt>
  <dd><%= @inventory_item.unit_cost %></dd>
  <dt><strong><%= model_class.human_attribute_name(:total_cost) %>:</strong></dt>
  <dd><%= @inventory_item.total_cost %></dd>
  <dt><strong><%= model_class.human_attribute_name(:profit_margin) %>:</strong></dt>
  <dd><%= @inventory_item.profit_margin %></dd>
  <dt><strong><%= model_class.human_attribute_name(:amount_sold) %>:</strong></dt>
  <dd><%= @inventory_item.amount_sold %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              inventory_items_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_inventory_item_path(@inventory_item), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              inventory_item_path(@inventory_item),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
